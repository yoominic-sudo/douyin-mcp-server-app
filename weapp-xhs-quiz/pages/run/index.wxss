.page { padding: 24rpx; }
.head { color: #fff; font-size: 46rpx; font-weight: 900; margin: 10rpx 0 18rpx; }
.card { background: rgba(255,255,255,0.97); border-radius: 20rpx; padding: 20rpx; box-shadow: 0 10rpx 30rpx rgba(0,61,120,0.16); }
.h2 { font-size: 34rpx; color: #0f172a; font-weight: 700; }
.meta,.desc { color: #475569; font-size: 26rpx; margin-top: 8rpx; }
.opt { margin-top: 12rpx; border: 1px solid #bae6fd; border-radius: 16rpx; padding: 16rpx; background: #fff; color: #0f172a; }
.badge { display: inline-block; padding: 6rpx 14rpx; border-radius: 999rpx; font-size: 22rpx; color: #be185d; background: #fdf2f8; }
.btn { margin-top: 18rpx; background: linear-gradient(90deg,#0ea5e9,#06b6d4); color: #fff; border-radius: 16rpx; font-size: 30rpx; }
.hot { background: linear-gradient(90deg,#ec4899,#f97316); }
