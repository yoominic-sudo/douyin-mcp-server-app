<view class="page">
  <view class="hero">
    <view class="hero-title">一一工具箱</view>
    <view class="hero-sub">实用工具 · 人格测评</view>
  </view>

  <block wx:for="{{categories}}" wx:key="name">
    <view class="section-title">{{item.name}}</view>
    <view class="grid">
      <block wx:for="{{item.items}}" wx:key="key">
        <view class="card" data-key="{{item.key}}" data-title="{{item.title}}" bindtap="openApp">
          <view class="icon">{{item.icon}}</view>
          <view class="title">{{item.title}}</view>
          <view class="desc">{{item.desc}}</view>
          <view class="quota" wx:if="{{quotaMap[item.key]}}">
            免费: {{quotaMap[item.key].free_remaining}} · 广告: {{quotaMap[item.key].ad_credits}}
          </view>
        </view>
      </block>
    </view>
  </block>
</view>
