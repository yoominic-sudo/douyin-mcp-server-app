<view class="page">
  <view class="hero">
    <view class="hero-title">一一工具箱</view>
    <view class="hero-sub">实用工具 · 人格测评</view>
  </view>

  <block wx:for="{{categories}}" wx:key="name" wx:for-item="cat">
    <view class="section-title">{{cat.name}}</view>
    <view class="grid">
      <block wx:for="{{cat.items}}" wx:key="key" wx:for-item="appItem">
        <view class="card" data-key="{{appItem.key}}" data-title="{{appItem.title}}" bindtap="openApp">
          <view class="icon">{{appItem.icon}}</view>
          <view class="title">{{appItem.title}}</view>
          <view class="desc">{{appItem.desc}}</view>
          <view class="quota" wx:if="{{quotaMap[appItem.key]}}">
            免费: {{quotaMap[appItem.key].free_remaining}} · 广告: {{quotaMap[appItem.key].ad_credits}}
          </view>
        </view>
      </block>
    </view>
  </block>
</view>
